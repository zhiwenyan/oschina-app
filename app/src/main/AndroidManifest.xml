<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.steven.oschina">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true"/>

    <application
        android:name=".OSCApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_logo"
        android:supportsRtl="true"
        android:theme="@style/App.Theme.Light">
        <activity
            android:name=".MainActivity"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Launch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.search.SearchActivity"
            android:label="搜索"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Search"/>
        <activity
            android:name=".ui.PubActivity"
            android:label="发布选择"
            android:theme="@style/PubTheme">
        </activity>
        <activity
            android:name=".ui.tweet.TweetDetailActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="动弹详情"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Tweet.Main"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".ui.account.LoginActivity"
            android:label="登录"
            android:screenOrientation="portrait"
            android:theme="@style/Account_Base.App.Theme.NoTitle"
            android:windowSoftInputMode="stateHidden|adjustResize">
        </activity>
        <activity
            android:name=".ui.tweet.ImageGalleryActivity"
            android:label="图片预览"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>

        <activity
            android:name=".ui.tweet.LargeImageActivity"
            android:screenOrientation="portrait">
        </activity>

        <!-- -detail activity -->

        <activity
            android:name=".ui.synthetical.article.EnglishArticleDetailActivity"
            android:label="返回"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.article.ArticleDetailActivity"
            android:label="返回"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.sub.QuestionDetailActivity"
            android:label="问答详情"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.sub.NewsDetailActivity"
            android:label="资讯详情"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Tweet.Main"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".ui.synthetical.sub.BlogDetailActivity"
            android:label="博客详情"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.article.WebActivity"
            android:label="返回"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main"/>
        <activity
            android:name=".ui.synthetical.sub.SubActivity"
            android:label="每日一博"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.comment.CommentsActivity"
            android:label="评论"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.tweet.TweetPublishActivity"
            android:label="弹一弹"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.tweet.SelectImageActivity"
            android:label="选择图片"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.article.PubArticleActivity"
            android:label="投递文章"
            android:screenOrientation="portrait"
            android:theme="@style/App.Theme.Main">
        </activity>
        <activity
            android:name=".ui.synthetical.article.WriteBlogActivity"
            android:theme="@style/App.Theme.Main"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize"
            android:label="写博客">
        </activity>
    </application>

</manifest>